<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uninstall_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/uninstall_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/func_line"
                android:button="@drawable/chk_app"
                android:textColor="@color/tx_nomal3"
                android:textSize="@dimen/tx_size3"/>

            <ImageView
                android:id="@+id/uninstall_app_ic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/uninstall_chk"/>

            <com.tapc.update.ui.view.CustomTextView
                android:id="@+id/uninstall_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/uninstall_app_ic"
                android:textColor="@color/tx_nomal3"
                android:textSize="@dimen/tx_size3"/>

            <Button
                android:id="@+id/uninstall_start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_start2"
                android:text="@string/app_uninstall"
                android:textColor="@color/tx_nomal4"
                android:textSize="@dimen/tx_size5"/>

            <Button
                android:id="@+id/open_app_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/uninstall_start_btn"
                android:background="@drawable/btn_start2"
                android:text="@string/app_open"
                android:textColor="@color/tx_nomal4"
                android:textSize="@dimen/tx_size5"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_item_line"/>
    </RelativeLayout>
</RelativeLayout>